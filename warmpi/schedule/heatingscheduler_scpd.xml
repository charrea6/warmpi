<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <actionList>
        <action>
            <name>GetPrograms</name>
            <argumentList>
                <argument>
                    <name>Results</name>
                    <direction>out</direction>
                    <relatedStateVariable>A_ARG_TYPE_Result</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>NewProgram</name>
            <argumentList>
                <argument>
                    <name>Name</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Name</relatedStateVariable>
                </argument>
                <argument>
                    <name>ProgramId</name>
                    <direction>out</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>DeleteProgram</name>
            <argumentList>
                <argument>
                    <name>ProgramId</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetSelectedProgram</name>
            <argumentList>
                <argument>
                    <name>ProgramId</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetSelectedProgram</name>
            <argumentList>
                <argument>
                    <name>ProgramId</name>
                    <direction>out</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetPeriods</name>
            <argumentList>
                <argument>
                    <name>ProgramId</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
                <argument>
                    <name>Result</name>
                    <direction>out</direction>
                    <relatedStateVariable>A_ARG_TYPE_Result</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>AddPeriod</name>
            <argumentList>
                <argument>
                    <name>ProgramId</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
                <argument>
                    <name>Period</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Period</relatedStateVariable>
                </argument>
                <argument>
                    <name>PeriodId</name>
                    <direction>out</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>RemovePeriod</name>
            <argumentList>
                <argument>
                    <name>PeriodId</name>
                    <direction>in</direction>
                    <relatedStateVariable>A_ARG_TYPE_Id</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
    <serviceStateTable>
        <stateVariable>
            <name>A_ARG_TYPE_System</name>
            <dataType>string</dataType>
            <allowedValueList>
                <allowedValue>HW</allowedValue>
                <allowedValue>CH</allowedValue>
            </allowedValueList>
        </stateVariable>
        <stateVariable>
            <name>A_ARG_TYPE_Name</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <name>A_ARG_TYPE_Id</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <name>A_ARG_TYPE_State</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <name>A_ARG_TYPE_Result</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable>
            <name>A_ARG_TYPE_Period</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>SelectedProgram</name>
            <dataType>string</dataType>
        </stateVariable>
    </serviceStateTable>
</scpd>
